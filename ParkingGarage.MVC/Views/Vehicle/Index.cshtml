@model IEnumerable<VehicleListItem>



@{
    ViewData["Title"] = "Vehicle Listing";
}

<div class="text-center">
    <h1 class="display-4">Vehicles</h1>
</div>

<ul class="nav">
    <li class="nav-item fs-5">
        <a class="nav-link active" aria-current="page" href="#">@Html.ActionLink("Add Vehicle","Post","Vehicle")</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#"></a>
    </li>
    <li class="nav-item fs-5">
        <a class="nav-link" href="#">@Html.ActionLink("Add Reservation","Post","Reservation")</a>
    </li>
</ul>
<p />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.Year</td>
                    <td>@vehicle.Make</td>
                    <td>@vehicle.ModelName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@vehicle.Id">Details</a> &nbsp | &nbsp
                        <a asp-action="Edit" asp-route-id="@vehicle.Id">Edit</a> &nbsp | &nbsp
                        <a asp-action="Delete" asp-route-id="@vehicle.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <h6>No Vehicles Entered Yet...</h6>
}