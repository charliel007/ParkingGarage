@model IEnumerable<VehicleListItem>



@{
    ViewData["Title"] = "Vehicle Listing";
}


@Html.ActionLink("Add Vehicle","Post","Vehicle")
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.Id</td>
                    <td>@vehicle.Year</td>
                    <td>@vehicle.Make</td>
                    <td>@vehicle.Model</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@vehicle.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@vehicle.Id">Edit</a> |
                        <a asp-action="Delte" asp-route-id="@vehicle.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Sorry, No Reservations</p>
}