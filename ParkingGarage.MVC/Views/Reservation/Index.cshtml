@model IEnumerable<ReservationListItem>



    @{
        ViewData["Title"] = "Reservation Listing";
    }

<div class="text-center">
    <h1 class="display-4">Reservations</h1>
</div>

<ul class="nav">
    <li class="nav-item fs-5">
        <a class="nav-link active" aria-current="page" href="#">@Html.ActionLink("Create Reservation","Post","Reservation")</a>
    </li>
</ul>
<p />

@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location Name</th>
                <th>License Plate</th>
                <th>Reservation Type</th>
                <th>Issued Time</th>
                <th>Expiration Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.IssuedNumber</td>
                    <td>@reservation.VehicleLocation.Location.Name</td>
                    <td>@reservation.VehicleLocation.Vehicle.LicensePlateNumber</td>
                    <td>@reservation.ReservationType</td>
                    <td>@reservation.IssueDate</td>
                    <td>@reservation.ExpirationDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Sorry, No Reservations</p>
}